<% content_for(:title_tag) do %>
  Edit your talent
<% end %>

<div class="container">
  <div class="row">
    <div class="new_talent">
      <div class="col-md-6 col-md-offset-3">
        <h2 class= "text-center"> <%=  icon("pencil")  %> Edit your talent !</h2>

        <%= simple_form_for(@talent) do |f| %>
          <%= f.association :category, label: 'Select the category matching your passion', class: 'section' %>
          <%= f.input :talent_proposed, label:'What\'s your talent?', placeholder: 'Piano' %>
          <%= f.input :description, label: 'Introduce yourself and describe your passion to the community', placeholder: 'Hello, I have been playing piano for 15 years and would be pleased to discuss about it or even give some lessons. I\'m looking forward to meeting you soon...' %>
          <%= f.input :lesson, as: :boolean, placeholder: 'true or false', label: 'Would you like to give lessons?' %>
          <%= f.button :submit, value:"Edit talent", class: 'btn btn-primary btn-lg' %>
        <% end %>

      </div>
    </div>
  </div>
</div>
